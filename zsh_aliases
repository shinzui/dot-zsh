alias _='sudo'
alias df='df -h'
alias g='grep -i'
alias h='history|g'
alias rm='rm -i'
alias rmf='rm -f'
alias mv='mv -i'
alias ls='ls -G'

###ruby
alias gi='gem install --no-rdoc --no-ri'
alias b='bundle'
alias bi='b install'
alias be='b exec'

###npm
alias ng="npm list -g --depth=0 2>/dev/null"
alias nl="npm list --depth=0 2>/dev/null"

###weather
alias laWeather="curl -4 http://wttr.in/LosAngeles"
alias sfWeather="curl -4 http://wttr.in/SanFrancisco"

###docker
alias dl="docker ps -l -q"

