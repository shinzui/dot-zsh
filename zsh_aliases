alias _='sudo'
alias df='df -h'
alias g='grep -i'
alias h='history|g'
alias rm='rm -i'
alias rmf='rm -f'
alias mv='mv -i'
alias ls='exa'
alias tree='exa -T'
alias vim='nvim'

###ruby
alias gi='gem install --no-rdoc --no-ri'
alias b='bundle'
alias bi='b install'
alias be='b exec'

###npm
alias ng="npm list -g --depth=0 2>/dev/null"
alias nl="npm list --depth=0 2>/dev/null"

###weather
alias laWeather="noglob curl -4 http://wttr.in/LA?m"
alias sfWeather="noglob curl -4 http://wttr.in/SF?m"
alias seoulWeather="noglob curl -4 http://wttr.in/Seoul?m"
alias tokyoWeather="noglob curl -4 http://wttr.in/Tokyo?m"
alias nyWeather="noglob curl -4 http://wttr.in/NY?m"

###docker
alias dl="docker ps -l -q"


###broken autocorrect
alias jest="nocorrect jest"

###Terraform
alias tfa="terraform apply -auto-approve"

###Kubernetes
alias k="kubectl"
alias kg="kubectl get"
alias kd="kubectl describe"
alias kgp="kg pods"
alias kdp="kd pods"
alias kgs="kg service"
alias kds="kd service"
alias kgd="kg deployment"
alias kex="kubectl exec -it"
